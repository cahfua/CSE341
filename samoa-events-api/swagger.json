{
  "openapi": "3.0.0",
  "info": {
    "title": "Samoa Community Events API",
    "version": "1.0.0",
    "description": "API for managing Samoan community events and RSVPs with full CRUD functionality."
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Local server"
    },
    {
      "url": "https://samoa-events-api.onrender.com",
      "description": "Render deployment"
    }
  ],
  "paths": {
    "/events": {
      "get": {
        "summary": "Get all events",
        "responses": {
          "200": {
            "description": "Returns an array of events"
          }
        }
      },
      "post": {
        "summary": "Create a new event",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "title",
                  "description",
                  "location",
                  "village",
                  "island",
                  "eventDate",
                  "startTime",
                  "endTime",
                  "organizerName",
                  "contactPhone"
                ],
                "properties": {
                  "title": { "type": "string", "example": "Samoa Community Night" },
                  "description": { "type": "string", "example": "Food, culture, and performances." },
                  "location": { "type": "string", "example": "Community Center" },
                  "village": { "type": "string", "example": "Afega" },
                  "island": { "type": "string", "example": "Upolu" },
                  "eventDate": { "type": "string", "example": "2026-02-10" },
                  "startTime": { "type": "string", "example": "18:00" },
                  "endTime": { "type": "string", "example": "20:30" },
                  "organizerName": { "type": "string", "example": "Celestine Ahfua" },
                  "contactPhone": { "type": "string", "example": "8015551234" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Event created successfully" },
          "400": { "description": "Invalid input data" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/events/{id}": {
      "get": {
        "summary": "Get event by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Event found" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Event not found" }
        }
      },
      "put": {
        "summary": "Update an event",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "title",
                  "description",
                  "location",
                  "village",
                  "island",
                  "eventDate",
                  "startTime",
                  "endTime",
                  "organizerName",
                  "contactPhone"
                ],
                "properties": {
                  "title": { "type": "string" },
                  "description": { "type": "string" },
                  "location": { "type": "string" },
                  "village": { "type": "string" },
                  "island": { "type": "string" },
                  "eventDate": { "type": "string" },
                  "startTime": { "type": "string" },
                  "endTime": { "type": "string" },
                  "organizerName": { "type": "string" },
                  "contactPhone": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "204": { "description": "Event updated successfully" },
          "400": { "description": "Invalid input data" },
          "404": { "description": "Event not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete an event",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "Event deleted successfully" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "Event not found" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/rsvps": {
      "get": {
        "summary": "Get all RSVPs",
        "responses": {
          "200": {
            "description": "Returns an array of RSVPs"
          }
        }
      },
      "post": {
        "summary": "Create a new RSVP",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "eventId",
                  "firstName",
                  "lastName",
                  "phone",
                  "partySize"
                ],
                "properties": {
                  "eventId": { "type": "string", "example": "64f8b2cfe4a1a9e92d0c1234" },
                  "firstName": { "type": "string", "example": "Lest" },
                  "lastName": { "type": "string", "example": "Ahfua" },
                  "phone": { "type": "string", "example": "0000000000" },
                  "partySize": { "type": "integer", "example": 3 },
                  "notes": { "type": "string", "example": "Please seat us near the front" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "RSVP created successfully" },
          "400": { "description": "Invalid input data" },
          "500": { "description": "Server error" }
        }
      }
    },

    "/rsvps/{id}": {
      "get": {
        "summary": "Get RSVP by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "RSVP found" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "RSVP not found" }
        }
      },
      "put": {
        "summary": "Update an RSVP",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": [
                  "eventId",
                  "firstName",
                  "lastName",
                  "phone",
                  "partySize"
                ],
                "properties": {
                  "eventId": { "type": "string" },
                  "firstName": { "type": "string" },
                  "lastName": { "type": "string" },
                  "phone": { "type": "string" },
                  "partySize": { "type": "integer" },
                  "notes": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "204": { "description": "RSVP updated successfully" },
          "400": { "description": "Invalid input data" },
          "404": { "description": "RSVP not found" },
          "500": { "description": "Server error" }
        }
      },
      "delete": {
        "summary": "Delete an RSVP",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "204": { "description": "RSVP deleted successfully" },
          "400": { "description": "Invalid ID format" },
          "404": { "description": "RSVP not found" },
          "500": { "description": "Server error" }
        }
      }
    }
  }
}